<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.macroeconomic.MacroeconomicFragment">

    <CheckBox
        android:id="@+id/checkbox_gdp_growth_rage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxGdpGrowthRageClicked"
        android:text="@string/gdp_growth_rage"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_gdp_current_usd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <CheckBox
        android:id="@+id/checkbox_gdp_current_usd"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_marginBottom="32dp"
        android:onClick="onCheckboxGdpCurrentUsdClicked"
        android:text="@string/gdp_current_usd"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_current_account_balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_current_account_balance"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:onClick="onCheckboxCurrentAccountBalanceClicked"
        android:text="@string/current_account_balance"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_fdi_net"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_fdi_net"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:layout_marginBottom="44dp"
        android:onClick="onCheckboxFdiNetClicked"
        android:text="@string/fdi_net"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_fdi_net_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_fdi_net_in"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:layout_marginBottom="32dp"
        android:onClick="onCheckboxFdiNetInClicked"
        android:text="@string/fdi_net_in"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_fdi_net_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_fdi_net_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:onClick="onCheckboxFdiNetOutClicked"
        android:text="@string/fdi_net_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/show_button"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:text="@string/show_button"
        android:onClick="Check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_fdi_net_out" />
</androidx.constraintlayout.widget.ConstraintLayout>