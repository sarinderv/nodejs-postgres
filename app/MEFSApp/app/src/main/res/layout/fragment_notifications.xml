<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/border"
        android:text="Macroeconomic Researcher Food Security Time Series Dashboard"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/startYear_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/main_logo"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="71dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/startYear_textview"
        app:layout_constraintEnd_toStartOf="@+id/title_textview"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_icon" />

    <Spinner
        android:id="@+id/spinner_countries"
        android:layout_width="84dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="528dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/title_textview"
        app:layout_constraintTop_toBottomOf="@+id/title_textview" />

    <TextView
        android:id="@+id/startYear_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="488dp"
        android:text="Start Year"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2010"
        app:layout_constraintBaseline_toBaselineOf="@+id/startYear_textview"
        app:layout_constraintEnd_toStartOf="@+id/endYear_textview"
        app:layout_constraintStart_toEndOf="@+id/startYear_textview" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:layout_marginBottom="476dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinner_countries"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/title_textview"
        app:layout_constraintTop_toBottomOf="@+id/title_textview"
        app:layout_constraintVertical_bias="0.978" />

    <TextView
        android:id="@+id/endYear_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="25dp"
        android:text="End Year"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="423dp"
        android:text="Apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2"
        app:layout_constraintStart_toStartOf="@+id/startYear_textview"
        app:layout_constraintTop_toBottomOf="@+id/endYear_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>